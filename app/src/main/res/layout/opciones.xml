<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv1"
        android:id="@+id/tv1"
        android:textSize="30dp"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv2"
        android:id="@+id/tv2"
        android:layout_below="@+id/tv1"
        android:textSize="30dp"
        android:layout_margin="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:layout_above="@+id/tv2"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
      />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et2"
        android:layout_alignTop="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignRight="@+id/et1"
        android:layout_alignEnd="@+id/et1"
        android:layout_margin="5dp"
        android:numeric="integer"/>
<Button
android:layout_width="100dp"
android:layout_height="wrap_content"
android:text="@string/btAgregar"
android:id="@+id/btAgregar"
android:onClick="agregar"
android:layout_centerVertical="true"
android:layout_alignLeft="@+id/et2"
android:layout_alignStart="@+id/et2"
android:layout_marginLeft="87dp"
android:layout_marginStart="87dp" />

<Button
android:layout_width="100dp"
android:layout_height="wrap_content"
android:text="@string/btSalir"
android:id="@+id/btSalir"
android:layout_alignTop="@+id/btAgregar"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_marginLeft="65dp"
android:layout_marginStart="65dp"
android:onClick="salir"/>
    </RelativeLayout>